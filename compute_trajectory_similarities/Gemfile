source "http://rubygems.org"

group :development do
  # ruby debugger: allows to change code during debugging runtime.
  gem 'pry'
  # pretty printed debugging info
  gem 'awesome_print'

  if defined?(JRUBY_VERSION)
    # allows handy navigation during debugging, such as
    # next, continue, exit, conditional debugging.
    gem 'pry-nav'
  else
    gem 'pry-byebug'
  end
end
